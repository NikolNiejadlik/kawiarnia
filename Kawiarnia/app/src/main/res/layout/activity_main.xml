<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
    tools:context="com.example.nicol.kawiarnia.MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text = "@string/witaj_w_restauracji_xyz"
    android:textColor="@android:color/black"
    android:textSize="25sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:text="@string/aby_z_o_y_zam_wienie_wpisz_numer_stolika_oraz_wybierz_pozycj_z_listy"
    android:gravity="center"
    android:textColor="@color/colorPrimary"
    android:textSize="15sp" />

<EditText
    android:id="@+id/edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/podaj_numer_stolika"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/button_danie"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:text="@string/wybierz_danie"
        android:textColor="@android:color/white" />

</LinearLayout>
